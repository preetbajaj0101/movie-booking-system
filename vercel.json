{
    "version": 2,
    "buildCommand": "python -m pip install -r requirements.txt && python manage.py collectstatic --noinput",
    "builds": [
        {
            "src": "movie_booking/wsgi.py",
            "use": "@vercel/python",
            "config": { 
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "movie_booking/wsgi.py"
        }
    ]
}
